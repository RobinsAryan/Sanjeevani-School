<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Attandance | <%=data.userName%>
    </title>
    <link rel="stylesheet" href="/css/common.css">
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="/css/student/attandance.css">
    <link rel="stylesheet" href="/css/popup.css">
    <link rel="stylesheet" href="/css/calendercss/demo.css">
    <link rel="stylesheet" href="/css/calendercss/theme1.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://kit.fontawesome.com/c538c9717e.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
</head>

<body>
    <input type="text" id="userId" hidden value="<%=data.userId%>">
    <div class="main">
        <div class="view">
            <div class="header">
                <span class="pageTitle">Attandance</span>
                <div class="rightHeader">
                    <span>
                        <i onclick="history.back()" class="fas fa-arrow-left"></i>
                    </span>
                </div>
                <div class="leftHeader">
                    <div onclick="openUserProfile()">
                        <%if(data.profile){%>
                            <img src="<%=data.profile%>" alt="">
                            <%}else{%>
                                <img src="/img/nouser.png" alt="">
                                <%}%>
                    </div>
                    </p>
                </div>
            </div>
            <div class="upperBody">
                <div class="upperRow">
                    <div onclick="buttonLinks(1)" class="smallCard c1">
                        <p>Present: <span id="tp">Loading...</span></p>
                    </div>
                    <div onclick="buttonLinks(1)" class="smallCard c4">
                        <p>Absent: <span id="ta">Loading...</span></p>
                    </div>
                </div>
            </div>
            <div class="chart">
               
            </div>
            <div class="fancyCalButton">
                <button onclick="fixCalTheme()" id="btn1">Fix</button>
                <button onclick="changeCalTheme()" id="btn2">Change</button>
            </div>
            <div id="caleandar">

            </div>
        </div>
    </div>
    <div id="popup" class="popup">

    </div>
    <script src="/js/common.js"></script>
    <script src="/js/calenderjs/caleandar.js"></script>
    <script src="/js/student/attandance.js"></script>
</body>

